                                        document.getElementById('anchor').value = location.hash;
                                    </script>
                                    <input type="hidden" name="logintoken" value="{{logintoken}}">
                                    <div class="form-group">
                                        <label for="username" class="sr-only">
                                            {{^canloginbyemail}}
                                            {{#str}} username {{/str}}
                                            {{/canloginbyemail}}
                                            {{#canloginbyemail}}
