                        webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                </div>
            </div>
        {{/displayguidelines}}
        {{^displayguidelines}}
            {{! <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 "></div> }}
        {{/displayguidelines}}
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-4 col-xl-4 fixform mt-3">
