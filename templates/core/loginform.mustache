        {{/urlbuttonone}}
        {{#urlbuttontwo}}
            <a class="btn btn-primary ml-3 p-3" href="{{urlbuttontwo}}" target="_blank">{{namebuttontwo}}</a>
        {{/urlbuttontwo}}
        {{#urlbuttonthree}}
            <a class="btn btn-primary ml-3 p-3" href="{{urlbuttonthree}}" target="_blank">{{namebuttonthree}}</a>
        {{/urlbuttonthree}}
