{{!
    Page footer make OUELO
}}
<footer id="top-footer" class="pt-3 bg-dark text-light">
    <div class="container">

        <div id="course-footer">{{{ output.course_footer }}}</div>
        {{! Custom from fordson }}
        <div class="row">
            <div class="col-lg-6 col-md-12">
                {{# output.should_display_navbar_logo }}
                    <span class="logo">
                        <img src="{{output.get_compact_logo_url}}" alt="{{sitename}}">
                    </span>
                {{/ output.should_display_navbar_logo }}
                {{^ output.should_display_navbar_logo }}
                    <span class="site-name d-none d-md-inline">{{{ sitename }}}</span>
                {{/ output.should_display_navbar_logo }}
                <p class="text mt-3 mw-80">
                    eLearning là giải pháp giúp người học phá bỏ rào cản về không gian – thời gian
                </p>
            </div>
            <div class="col-lg-4 col-md-6">
                {{{ output.footnote }}}
                <div class="panel-group" id="mainfooterdiv2" role="tablist" aria-multiselectable="true">
                    <div class="panelfooter">
                        <h3>{{#str}} contact:footer, theme_fordson {{/str}}</h3>
                        <div class="panel-tools pull-right">
                            <button id="footermaindiv2" type="button" class="btn btn-box-tool d-md-none d-lg-none" data-toggle="collapse" data-target="#collapsemainfooterdiv2" aria-expanded="true">
                            </button>
                        </div>
                    </div>
                    <div id="collapsemainfooterdiv2" class="panel-collapse collapse show" role="tabpanel">
                        <div class="panel-body">                 
                            <p class="mb-0"><i class="fa fa-globe" aria-hidden="true" ></i> <a href="http://www.elo.edu.vn">www.elo.edu.vn</a></p>
                            <p class="mb-0"><i class="fa fa-phone-square" aria-hidden="true" ></i> {{#str}} phonenumber:footer, theme_fordson {{/str}}</p>
                            <p class="mb-0"><i class="fa fa-envelope-o" aria-hidden="true" ></i> <a href="mailto:elo@oude.edu.vn">elo@oude.edu.vn</a></p>
                        </div>
                    </div>
                </div> 
            </div>
            <div class="col-lg-2 col-md-6">
                {{{ output.footnote }}}
                <div class="panel-group" id="mainfooterdiv3" role="tablist" aria-multiselectable="true">
                    <div class="panelfooter">
                        <h3>{{#str}} connect:footer, theme_fordson {{/str}} </h3>
                        <div class="panel-tools pull-right">
                            <button id="footermaindiv3" type="button" class="btn btn-box-tool d-md-none d-lg-none" data-toggle="collapse" data-target="#collapsemainfooterdiv3" aria-expanded="true">
                            </button>
                        </div>
                    </div>
                    <div id="collapsemainfooterdiv3" class="panel-collapse collapse show" role="tabpanel">
                        <div class="panel-body">                 
                            <p class="mb-0"><a href="https://www.facebook.com/cunhantructuyendhm/"><i class="fa fa-facebook" aria-hidden="true" ></i> Facebook</a></p>
                            <p class="mb-0"><a href="https://www.youtube.com/channel/UChzIXUDsqPbdfHQeuaIOeQw/"><i class="fa fa-youtube" aria-hidden="true" style="background:#DE0034;"></i> Youtube</a></p>
                        
                        </div>
                    </div>
                </div>
                
            </div>
            <hr>
            <div class="col-12 text-center mt-2">{{#str}} copyright:footer, theme_fordson {{/str}}</div>
        </div>

        {{! Custom from fordson - end}}
        <nav class="nav navbar-nav d-md-none">
            {{# output.custom_menu_flat }}
            <ul class="list-unstyled pt-3">
                {{> theme_boost/custom_menu_footer }}
            </ul>
            {{/ output.custom_menu_flat }}
        </nav>

        {{{ output.standard_end_of_body_html }}}
    </div>
</footer>